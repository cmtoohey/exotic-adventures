<Window x:Class="ExoticAdventures.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="480" Width="640" WindowState="Maximized" Loaded="Window_Loaded" Closed="Window_Closed">
    <Grid>
        <Canvas HorizontalAlignment="Left" Height="480" Margin="0,10,-8,-40" VerticalAlignment="Top" Width="640">
            <Image Height="480" Width="640"/>
            <Ellipse x:Name="headCircle" Fill="#FFF4F4F5" Height="100" Canvas.Left="262" Stroke="Black" Canvas.Top="193" Width="100"/>
            <Ellipse x:Name="rightCircle" Fill="#FFF4F4F5" Height="100" Canvas.Left="499" Stroke="Black" Canvas.Top="24" Width="100"/>
            <Ellipse x:Name="leftCircle" Fill="#FFF4F4F5" Height="100" Canvas.Left="32" Stroke="Black" Canvas.Top="24" Width="100"/>
        </Canvas>

    </Grid>
</Window>
